&lt;p&gt;&lt;img class=&quot;&quot; data-backh=&quot;85&quot; data-backw=&quot;347&quot; data-before-oversubscription-url=&quot;http://img2.jintiankansha.me/get?src=http://mmbiz.qpic.cn/mmbiz_png/dNTodWpot50jq3lVEg38ILhMCWEy0ElVXDrM5GNcqdiaqZv9Z63lWu7LEIJNG5GbScvUkao2tXGicwKmib3A3zZyw/?wx_fmt=png&quot; data-copyright=&quot;0&quot; data-ratio=&quot;0.24495677233429394&quot; data-s=&quot;300,640&quot; data-src=&quot;http://img2.jintiankansha.me/get?src=http://mmbiz.qpic.cn/mmbiz_png/dNTodWpot50jq3lVEg38ILhMCWEy0ElVXDrM5GNcqdiaqZv9Z63lWu7LEIJNG5GbScvUkao2tXGicwKmib3A3zZyw/640?wx_fmt=png&quot; data-type=&quot;png&quot; data-w=&quot;347&quot; /&gt;&lt;/p&gt;
&lt;p&gt;&lt;img class=&quot;&quot; data-backh=&quot;395&quot; data-backw=&quot;287&quot; data-before-oversubscription-url=&quot;http://img2.jintiankansha.me/get?src=http://mmbiz.qpic.cn/mmbiz_png/dNTodWpot50jq3lVEg38ILhMCWEy0ElVSiclyjGjurSftS1ibzZVreOUomyThp6vFax1U5DWAXDbskvYOpGbSN9g/?wx_fmt=png&quot; data-oversubscription-url=&quot;http://img2.jintiankansha.me/get?src=http://mmbiz.qpic.cn/mmbiz_jpg/dNTodWpot50jq3lVEg38ILhMCWEy0ElVQSTLoGwWa3NUMxscqWKxvLDPHRpxtmicW2JnaKy78QT64ZanVhqDtUg/0?wx_fmt=jpeg&quot; data-ratio=&quot;1.3763066202090593&quot; data-s=&quot;300,640&quot; data-src=&quot;http://img2.jintiankansha.me/get?src=http://mmbiz.qpic.cn/mmbiz_jpg/dNTodWpot50jq3lVEg38ILhMCWEy0ElVQSTLoGwWa3NUMxscqWKxvLDPHRpxtmicW2JnaKy78QT64ZanVhqDtUg/640?wx_fmt=jpeg&quot; data-type=&quot;jpeg&quot; data-w=&quot;287&quot; /&gt;&lt;/p&gt;

