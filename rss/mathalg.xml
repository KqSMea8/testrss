&lt;p&gt;&lt;span&gt; &lt;/span&gt;&lt;/p&gt;
&lt;p&gt;&lt;span&gt;&lt;span class=&quot;&quot;&gt;if&lt;/span&gt;&lt;span class=&quot;&quot;&gt; &lt;/span&gt;&lt;span class=&quot;&quot;&gt;__name__&lt;/span&gt;&lt;span class=&quot;&quot;&gt; == &lt;/span&gt;&lt;span class=&quot;&quot;&gt;'__main__'&lt;/span&gt;&lt;span class=&quot;&quot;&gt;:&lt;/span&gt;&lt;/span&gt;&lt;/p&gt;
