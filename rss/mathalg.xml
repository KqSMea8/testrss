&lt;p&gt;&lt;span&gt;a = [0.5:.5:4.5];&lt;/span&gt;&lt;/p&gt;
&lt;p&gt;&lt;span&gt;X = cos(th)*a;&lt;/span&gt;&lt;/p&gt;
&lt;p&gt;&lt;span&gt;Y = sin(th)*sqrt(25-a.^2);&lt;/span&gt;&lt;/p&gt;
&lt;p&gt;&lt;span&gt;plot(X,Y),axis('equal'),xlabel('x'), ylabel('y')&lt;/span&gt;&lt;/p&gt;
