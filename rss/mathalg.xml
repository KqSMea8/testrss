&lt;td width=&quot;0&quot;&gt;
&lt;p&gt;&lt;ins class=&quot;adsbygoogle&quot; data-ad-layout=&quot;in-article&quot; data-ad-format=&quot;fluid&quot; data-ad-client=&quot;ca-pub-1837452791782084&quot; data-ad-slot=&quot;7041996284&quot;/&gt; &lt;span&gt;D-H&lt;/span&gt;&lt;/p&gt;
&lt;/td&gt;
&lt;td width=&quot;0&quot;&gt;
&lt;p&gt;&lt;span&gt;E-H&lt;/span&gt;&lt;/p&gt;
&lt;/td&gt;
